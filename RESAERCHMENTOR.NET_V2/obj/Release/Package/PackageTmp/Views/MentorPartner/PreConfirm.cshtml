@model RESAERCHMENTOR.NET_V2.Models.UserProfile
@using Microsoft.AspNet.Identity
@using System.Globalization
@{
    ViewBag.Title = "Confirm User";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- Row -->
<div class="table-struct full-width full-height">
    <div class="table-cell vertical-align-middle auth-form-wrap">

        <div class="auth-form  ml-auto mr-auto no-float">

            <div class="row">
                <div class="col-sm-12 col-xs-12">

                    <div class="mb-30">
                        <h3 class="text-center txt-dark mb-10">Account Confirmation</h3>
                        <h5 class="text-center txt-dark mb-10">Please enter the confirmation code that was sent to your mail.</h5>
                        <dv align="center">
                            <span style="color:green"><strong>@ViewBag.ErrorText</strong></span>
                        </dv>
                    </div>
                    <div class="form-wrap">
                        <form action="@Url.Action("Confirm_Click", "MentorPartner")" method="post" role="form" enctype="multipart/form-data" id="FileData">
                            <input type="text" name="ConfirmationCode" value=@Model.ConfirmationCode id="ConfirmationCode" class="form-control" placeholder="Enter Confirmation Code">
                            <br />
                            <div align="center">
                                <table>
                                    <tr>
                                        <td>
                                            <button type="submit" class="btn btn-success mr-10 mb-30">Confirm</button>
                                        </td>
                                        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                        <td>
                                            <a href="@Url.Action("ResendConfirm","MentorPartner")">Resend Confirmation Code</a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Row -->
